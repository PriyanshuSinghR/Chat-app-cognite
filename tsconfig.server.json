{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "noEmit": false,
    "isolatedModules": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["socket-server.mts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
